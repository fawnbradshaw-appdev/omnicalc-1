
<form action="/payment/results">
  <div>
    <label for="apr"> APR </label>
    <input id="apr" type="text" placeholder="E.g. 5.42" name="user_apr">
  </div>

  <div>
    <label for="period"> Number of years </label>
    <input id="period" type="text" placeholder="How many years to repay principle?" name="user_years">
